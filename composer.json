{
    "name": "unclecheese/dropzone",
    "description": "An HTML5 upload field for the CMS and frontend forms.",
    "type": "silverstripe-vendormodule",
    "keywords": ["silverstripe", "upload", "uploader", "files", "forms", "cms"],
    "license": "BSD-3-Clause",
    "authors": [{
        "name": "Uncle Cheese",
        "email": "unclecheese@leftandmain.com"
    }],
    "require": {
        "php": ">=8.1",
        "silverstripe/framework": "^5"
    },
    "extra": {
        "installer-name": "dropzone",
        "expose": [
            "javascript",
            "css",
            "images"
        ]        
    },
    "autoload": {
        "psr-4": {
            "UncleCheese\\Dropzone\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
